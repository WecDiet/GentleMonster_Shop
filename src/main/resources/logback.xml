<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Định nghĩa đường dẫn file log -->
    <property name="LOG_FILE" value="src\main\resources\logs\action.log" />

    <!-- Appender để ghi log vào file với khả năng xoay file -->
    <appender name="ACTION_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>
        <append>true</append>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- Giữ 30 ngày log -->
            <totalSizeCap>100MB</totalSizeCap> <!-- Giới hạn tổng dung lượng -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Logger cho package chứa Aspect (thay bằng package thực tế của bạn) -->
    <logger name="com.gentlemonster.GentleMonsterBE.Aspect" level="INFO" additivity="false">
        <appender-ref ref="ACTION_LOG" />
    </logger>

    <appender-ref ref="FILE" />
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
            </encoder>
        </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>